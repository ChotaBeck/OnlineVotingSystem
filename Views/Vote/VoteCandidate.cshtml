@model IEnumerable<OnlineVotingSystem.Models.Candidate>
@using OnlineVotingSystem.Enum

@{
    ViewData["Title"] = "Vote For Candidates";
    
}
<h3 class="text-center">Check the the circles to vote for you candidates </h3>
@foreach (var position in Enum.GetNames<PositionEnum>())
{
    
    <div class="card">
    <div class="card-header">
        @position
    </div>
    <div class="card-body">
        
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var item in Model)
                {
                    if (item.Position == position)
                    {
                        <div class="col">
                            <div class="card" >
                            <img src="@item.ImageUrl" class="card-img-top" alt="@item.FirstName photo">
                                <div class="card-body">
                                    <h5 class="card-title">@item.FirstName @item.LastName</h5>
                                    <p class="card-text">Political Party: @item.PoliticalParty</p>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="@position " id="flexRadioDefault1">
                                        <label class="form-check-label" for="flexRadioDefault1">
                                            Vote Here
                                    </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>

        
    </div>
    
    </div>
    <br>
}
