@model OnlineVotingSystem.Models.Voter
@{
    ViewData["Title"] = "SIN Verification";
}

<div class="text-center">
    <div class="display-4 container">
        <form asp-action="Verification">
            <div class="form-group">
                <label asp-for="SIN" class="control-label"></label>
                <input type="text" name="id"/>
                <span asp-validation-for="SIN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>